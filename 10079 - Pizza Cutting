#include<bits/stdc++.h>
using namespace std;
#define		pb              push_back
#define		PB              pop_back
#define		nn              "\n"
#define		all(p)          p.begin(),p.end()
#define		ss              ' '
#define		gcd(a,b)        __gcd(a,b)
#define		lcm(a,b)        (a*b)/gcd(a,b)
#define		pi              acos(-1.0)
typedef		long long       ll;
typedef		vector<ll>      vll;

int main()
{
    ll n;
    while(true)
    {
        ll s=4;
        cin>>n;
        if(n<0) break;
        if(n==1) cout<<"2"<<nn;
        else if(n==2) cout<<"4"<<nn;
        else if(n==0) cout<<"1"<<nn;
        else if(n>2)
        {
            for(int i=3;i<=n;i++)
            {
                s=s+i;
            }
            cout<<s<<nn;
        }


    }


    return 0;
}
